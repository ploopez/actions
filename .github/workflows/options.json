{
  "scheme": "semantic",
  "versionFile": "./composer.json",
  "files": [
    {
      "path": "./composer.json"
    }
  ],
  "rules": [
    {
      "trigger": "commit",
      "branch": "hotfix",
      "bump": "build"
    },
    {
      "trigger": "commit",
      "bump": "minor",
      "branch": "master",
      "reset": "build"
    },
    {
      "trigger": "commit",
      "bump": "major",
      "branch": "release",
      "reset": [
        "minor",
        "build"
      ]
    }
  ]
}
